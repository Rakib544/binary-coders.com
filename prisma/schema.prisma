// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
  others
}

enum Role{
  user
  admin
}

model User {
 id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  email String  @unique
  password String
  gender Gender
  profilePicture String
  isVerified Boolean @default(false)
  verifiedToken String
  resetPasswordToken String
  role Role @default(user)
  answers Answers[]
}

type Comment {
    publishedAt DateTime @default(now())
    text String
    commentAuthorId String
}


model BlogPosts {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  slug String @unique
  readTime String 
  html String
  authorId String
  comments Comment[]
}

type Vote {
  voteCreatorId String
  voteType String
}


model Question {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  slug String @unique
  description String
  tags String[]
  authorId String
  view String[]
  vote Vote[]
}


model Problem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  slug String @unique
  description String
  tags String[]
  authorId String
}

model Answers {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  answeredTime DateTime @default(now())
  slug String
  answer String
  creator User @relation(fields: [answerCreatorId], references: [id])
  answerCreatorId String @db.ObjectId
}


